{
  "name": "@sinoui/ripple",
  "version": "1.0.11",
  "license": "MIT",
  "main": "index.js",
  "description": "遵循 Material Design 的涟漪效果实现。",
  "module": "esm/index.js",
  "homepage": "https://sinoui.github.io/ripple",
  "bugs": {
    "url": "https://github.com/sinoui/ripple/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinoui/ripple.git"
  },
  "scripts": {
    "start": "ts-lib-tools watch",
    "test": "ts-lib-tools test",
    "build": "ts-lib-tools build --simple",
    "format": "ts-lib-tools format",
    "lint": "ts-lib-tools lint",
    "doc:dev": "docz dev",
    "doc:build": "docz build",
    "doc:publish": "docz build && gh-pages -d .docz/dist",
    "release": "yarn build && yarn publish dist --tag latest"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-tools test",
      "eslint --fix --color",
      "git add"
    ]
  },
  "peerDependencies": {
    "classnames": "^2.2.0",
    "react": ">=16.8.0",
    "react-dom": "^16.8.2",
    "styled-components": ">=4.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.6.0",
    "@babel/runtime": "^7.6.3",
    "dom-helpers": "^3.4.0",
    "keycode": "^2.2.0",
    "warning": "^4.0.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/dom-helpers": "^3.4.1",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-test-renderer": "^16.9.1",
    "@types/styled-components": "^4.4.2",
    "@types/warning": "^3.0.0",
    "classnames": "^2.2.6",
    "css-loader": "^3.4.2",
    "docz": "^1.3.2",
    "docz-theme-default": "^1.2.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "style-loader": "^1.1.2",
    "styled-components": "^5.0.0",
    "ts-lib-tools": "^0.11.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "webpack-docz-ghpages-plugin": "^0.11.0"
  },
  "types": "index.d.ts",
  "sideEffects": false
}
